<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/grey2">
   <RelativeLayout
        android:id="@+id/title"
       android:layout_width="fill_parent"
       android:layout_height="130dip"
       android:layout_marginBottom="0dip"
       android:layout_marginTop="0dip"
       android:background="#e8a32b">

        <RelativeLayout
            android:id="@+id/titlesub"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="10dip"
            android:layout_marginBottom="-16dip"
            android:background="@drawable/panorama"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:id="@+id/title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textColor="#ffffffff"
                android:textSize="20dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="80dp"
                android:text="@string/gallery_title">
            </TextView>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/toolbarlinearlayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/title"
            android:layout_margin="5dp">

            <ImageView
                    android:id="@+id/imgView"
        			android:layout_width="fill_parent"
        			android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/loadpicturebutton"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_below="@+id/profilePhone"
            android:layout_marginTop="26dp"
            android:text="@string/submitButton"
            android:textColor="@color/White"
            android:background="@drawable/submit"
            android:layout_toLeftOf="@+id/buttonCancelProfile"/>

        <Button
            android:id="@+id/buttonCancelProfile"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_below="@+id/imgView"
            android:layout_alignTop="@+id/loadpicturebutton"
            android:text="@string/cancelButton"
            android:background="@drawable/cancel"
            android:textColor="@color/White"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="17dp"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>
    
    
</RelativeLayout>