<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/customshape" >



        <!--
             <ToggleButton
            android:id="@+id/powerButton"
            style="@style/ToggleAppTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@id/arrow" />
        -->

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="18dp"
            android:src="@drawable/arrow_normal" />

        <TextView
            android:id="@+id/beacon_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/arrow"
            android:layout_marginLeft="36dp"
            android:layout_toRightOf="@+id/arrow"
            android:text="Title"
            android:textColor="#333333"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/textView3"
            android:background="#b8b8b8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView1"
            android:layout_alignBottom="@+id/textView1"
            android:layout_alignParentRight="true"
            android:layout_marginRight="51dp"
            android:text="Distance of alert:" />

        <TextView
            android:id="@+id/textView1"
            android:background="#b8b8b8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/arrow"
            android:layout_below="@+id/beacon_title"
            android:layout_marginTop="5dp"
            android:text="GPS position: " />

        <TextView
            android:id="@+id/textView5"
            android:background="#b8b8b8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView1"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="3dp"
            android:text="E-mail:" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView5"
            android:layout_below="@+id/textView5"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView7"
            android:background="#b8b8b8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView6"
            android:layout_alignLeft="@+id/textView3"
            android:text="SMS:" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView6"
            android:layout_alignBottom="@+id/textView6"
            android:layout_alignLeft="@+id/textView7"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView9"
            android:background="#b8b8b8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView6"
            android:layout_below="@+id/textView6"
            android:layout_marginTop="3dp"
            android:text="URL and IP address CMS:" />

        <Button
            android:id="@+id/activate_button"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView10"
            android:background="@drawable/button"
            android:layout_marginBottom="5dp"
            android:textSize="12dp"
            android:text="Activate" />

        <Button
            android:id="@+id/deletee_button"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignBaseline="@+id/edit_button"
            android:layout_alignBottom="@+id/edit_button"
            android:layout_alignParentRight="true"
            android:background="@drawable/button"
            android:layout_marginBottom="5dp"
            android:text="Delete"
            android:textSize="12dp" />

        <Button
            android:id="@+id/edit_button"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/textView10"
            android:layout_toLeftOf="@+id/deletee_button"
            android:background="@drawable/button"
            android:layout_marginBottom="5dp"
            android:text="Edit"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView5"
            android:layout_below="@+id/textView1"
            android:ellipsize="marquee"
	        android:marqueeRepeatLimit="marquee_forever"
	        android:focusable="true"
        	android:focusableInTouchMode="true" 
        	android:scrollHorizontally="true"
	        android:singleLine="true"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView5"
            android:layout_alignLeft="@+id/textView3"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView9"
            android:layout_alignRight="@+id/textView3"
            android:layout_below="@+id/textView9"
            android:text="TextView"
            android:singleLine="true" />

        <Button
            android:id="@+id/deactivate_button"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignBaseline="@+id/edit_button"
            android:layout_alignBottom="@+id/edit_button"
            android:layout_toLeftOf="@+id/edit_button"
            android:layout_toRightOf="@+id/activate_button"
            android:background="@drawable/button"
            android:layout_marginBottom="5dp"
            android:text="Deactivate"
            android:textSize="12dp" />

</RelativeLayout>