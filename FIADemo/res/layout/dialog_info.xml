<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent" >
<RelativeLayout
     android:layout_width="fill_parent"  
   android:layout_height="wrap_content"  
   android:layout_gravity="center"  
   android:layout_margin="0dip"  
   android:background="@drawable/alert_background"  
   android:orientation="vertical"  
   android:paddingBottom="45dip"  
   android:paddingLeft="0dip"  
   android:paddingRight="0dip"  
   android:paddingTop="0dip"  >
   

    <TextView  
     android:id="@+id/dialogTitle"  
     android:layout_width="fill_parent"  
     android:layout_height="wrap_content"  
     android:layout_marginTop="20dip"  
     android:background="#00000000"  
     android:gravity="center"  
     android:text="Code does not exist"  
     android:textColor="#fff"  
     android:textSize="22sp"  
     android:textStyle="bold" >  
   </TextView>

    <TextView
        android:id="@+id/message_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/dialogTitle"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="22dp"
        android:text="Device name:"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/message_txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/message_txt"
        android:text="Device protocol:"
        android:textSize="19sp" />
    <TextView
        android:id="@+id/message_txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/message_txt1"
        android:text="Address:"
        android:textSize="19sp" />
    <TextView
        android:id="@+id/message_txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/message_txt2"
        android:text="IPv6 address:"
        android:textSize="19sp" />
    <TextView
        android:id="@+id/message_txt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/message_txt3"
        android:text="Variable name:"
        android:textSize="19sp" />
    
    <TextView
        android:id="@+id/message_txt5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/message_txt4"
        android:text="Variable value:"
        android:textSize="19sp" />
    
    <TextView
        android:id="@+id/message_txt6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/message_txt5"
        android:text="Variable unit:"
        android:textSize="19sp" />
    
    <Button
        android:id="@+id/url_btn"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/message_txt6"
        android:background="@drawable/button"
        android:text="URL"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/ok_btn"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/url_btn"
        android:layout_alignRight="@+id/url_btn"
        android:layout_below="@+id/url_btn"
        android:layout_marginTop="15dp"
        android:background="@drawable/button"
        android:text="OK"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/dname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/cancel_btn"
        android:layout_alignTop="@+id/message_txt"
        android:layout_toRightOf="@+id/message_txt"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="3dp"
        android:text="TextView" />
    
    <TextView
        android:id="@+id/dprotocol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/cancel_btn"
        android:layout_alignTop="@+id/message_txt1"
        android:layout_toRightOf="@+id/message_txt1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="3dp"
        android:ellipsize="end"
            android:singleLine="true"
        android:text="TextView" />

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/cancel_btn"
        android:layout_alignTop="@+id/message_txt2"
        android:layout_toRightOf="@+id/message_txt2"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="3dp"
        android:text="TextView" />
    
    <TextView
        android:id="@+id/ipv6addr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/cancel_btn"
        android:layout_alignTop="@+id/message_txt3"
        android:layout_toRightOf="@+id/message_txt3"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="3dp"
        android:text="TextView" />
    
    <TextView
        android:id="@+id/vname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/cancel_btn"
        android:layout_alignTop="@+id/message_txt4"
        android:layout_toRightOf="@+id/message_txt4"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="3dp"
        android:text="TextView" />
    
    <TextView
        android:id="@+id/vvalue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/cancel_btn"
        android:layout_alignTop="@+id/message_txt5"
        android:layout_toRightOf="@+id/message_txt5"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="3dp"
        android:text="TextView" />
    
    <TextView
        android:id="@+id/vunit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/cancel_btn"
        android:layout_alignTop="@+id/message_txt6"
        android:layout_toRightOf="@+id/message_txt6"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="3dp"
        android:text="TextView" />

</RelativeLayout>
</ScrollView>