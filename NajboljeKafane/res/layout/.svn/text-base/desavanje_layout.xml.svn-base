<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/backgroundpaperclean">

    <LinearLayout
        android:id="@+id/toolbarlinearlayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/toolbarlinearlayout"
        android:layout_margin="5dp"
        android:orientation="vertical" >

        <LinearLayout
                android:id="@+id/linearlayout1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"                
                android:layout_marginTop="30dip">

            <TextView
                android:id="@+id/desavanja_kafana"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_marginTop="0dip"
                android:layout_weight="0.75"
                android:gravity="center"
                android:text="Naziv"
                android:textColor="#000"            
                android:textSize="22dip"
                />

        </LinearLayout>

        <LinearLayout
                android:id="@+id/linearlayout2"
                android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp">

            <ImageButton
                    android:id="@+id/cameraBtn"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"                 
                    android:src="@drawable/icomusic"
                    android:background="@android:color/transparent"/>
                    
           

            <TextView
                android:id="@+id/desavanje_naziv"
             	android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"           
                android:layout_marginRight="5dip"
                android:layout_marginLeft="5dip"
                android:layout_weight="0.75"
                android:gravity="left"
                android:text="Adresa"
                android:textColor="#000"
            
                android:textSize="15dip" />
        </LinearLayout>
        
        <LinearLayout
                android:id="@+id/linearlayout2"
                android:layout_width="fill_parent"   
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp">

            <ImageButton
                    android:id="@+id/cameraBtn"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"                 
                    android:src="@drawable/ico_address"
                    android:background="@android:color/transparent"/>
                    
           

            <TextView
                android:id="@+id/desavanja_grad1"
             	android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center"           
                android:layout_marginRight="5dip"
                android:layout_marginLeft="5dip"
                android:layout_weight="0.75"
                android:gravity="left"
                android:text="Adresa"
                android:textColor="#000"
            
                android:textSize="15dip" />
        </LinearLayout>
        
        <LinearLayout
                android:id="@+id/linearlayout2"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent" 
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp">

            <ImageButton
                    android:id="@+id/cameraBtn"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"                 
                    android:src="@drawable/icovreme"
                    android:background="@android:color/transparent"/>
                    
           

            <TextView
                android:id="@+id/desavanja_vreme1"
             	android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center"           
                android:layout_marginRight="5dip"
                android:layout_marginLeft="5dip"
                android:layout_weight="0.75"
                android:gravity="left"
                android:text="Adresa"
                android:textColor="#000"
            
                android:textSize="15dip" />
        </LinearLayout>
        
        <ScrollView
	     	android:id="@+id/scroll_container"
	     	android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="10dp">
        <LinearLayout
            android:id="@+id/linearlayout7"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal">

            <ImageButton
                    android:id="@+id/cameraBtn"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"                 
                    android:src="@drawable/icoopis"
                    android:background="@android:color/transparent"/>
                    
            <TextView
                android:id="@+id/desavanja_opis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:text="Adresa"
                android:textColor="#000"
                android:textSize="15dip" />

        </LinearLayout>
        </ScrollView> 
        
    </LinearLayout>

</RelativeLayout>