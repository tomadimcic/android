<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:id="@+id/desavanja_row" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#b11944"/>
<!--
        <ImageView
            android:id="@+id/arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/arrow_normal" />

        
             <ToggleButton
            android:id="@+id/powerButton"
            style="@style/ToggleAppTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@id/arrow" />
        -->

        <ImageView
            android:id="@+id/desavanjaIcon"
            android:layout_width="50dip"
          	android:layout_height="50dip"
          	android:layout_centerVertical="true"
         	android:src="@drawable/ic_launcher"
            android:scaleType="centerCrop" 
            android:layout_marginLeft="15dip" />
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/desavanjaIcon"
            android:orientation="vertical"
            android:layout_marginTop="5dip" >

	        <TextView
	            android:id="@+id/desavanja_name"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="10dp"
	            android:textColor="#fff"
	            android:textSize="15dp"
	            android:maxLines="1" />
	        <TextView
	            android:id="@+id/desavanja_kafana_name"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="10dp"
	            android:textColor="#fff"
	            android:textSize="13dp" />
	        <TextView
	            android:id="@+id/desavanja_grad"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="10dp"
	            android:textColor="#fff"
	            android:textSize="11dp" />
	        <TextView
	            android:id="@+id/desavanja_vreme"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="10dp"
	            android:textColor="#fff"
	            android:textSize="10dp" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>