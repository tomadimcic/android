<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp" android:layout_height="wrap_content"
    android:background="@drawable/info_background">

    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/relativeLayout">

        <TextView android:id="@+id/observation_category"
            android:textColor="#000000"
            android:textSize="13dp"
            android:layout_width="wrap_content"
            android:layout_height ="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="6dp"
            android:text="@string/my_events_category"/>

        <TextView android:id="@+id/observation_category_text"
            android:textSize="13dp"
            android:layout_below ="@id/observation_category"
            android:layout_width="wrap_content"
            android:layout_height ="wrap_content"
            android:textColor="#bcbcbc"
            android:layout_marginBottom="4dp"
            android:maxLines="4"
            android:text="nesto"/>

        <TextView android:id="@+id/observation_time"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below ="@id/observation_category_text"
            android:textStyle="bold"
            android:textSize="13dp"
            android:text="@string/my_events_time"/>

        <TextView android:id="@+id/observation_time_text"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="13dp"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/observation_time"
            android:layout_alignTop="@id/observation_time"
            android:text="nesto"/>

        <TextView android:id="@+id/observation_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below ="@id/observation_time"
            android:textColor="#bcbcbc"
            android:textSize="13dp"
            android:textStyle="bold"
            android:text="@string/my_events_date"/>

        <TextView android:id="@+id/observation_description"
            android:textColor="#000000"
            android:textSize="13dp"
            android:layout_below ="@id/observation_date"
            android:layout_width="wrap_content"
            android:layout_height ="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="6dp"
            android:text="@string/my_events_description"/>

        <TextView android:id="@+id/observation_description_text"
            android:textSize="13dp"
            android:layout_below ="@id/observation_description"
            android:layout_width="wrap_content"
            android:layout_height ="wrap_content"
            android:textColor="#bcbcbc"
            android:text="nesto"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:layout_alignParentLeft="true">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:id="@+id/info_window_image"
            />

    </RelativeLayout>

</RelativeLayout>
