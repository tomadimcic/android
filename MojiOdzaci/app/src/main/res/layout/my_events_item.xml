<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="5dp" >

    <RelativeLayout
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/folder"
            android:src="@drawable/folder"
            android:background="@drawable/folder"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">



        <TextView android:id="@+id/observation_time"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="13dp"
            android:text="@string/my_events_time"/>

        <TextView android:id="@+id/observation_time_text"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="13dp"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/observation_time"
            android:text="nesto"/>

        <TextView android:id="@+id/observation_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below ="@id/observation_time"
            android:textColor="#bcbcbc"
            android:textSize="13dp"
            android:textStyle="bold"
            android:text="@string/my_events_date"/>

        <TextView android:id="@+id/observation_description"
            android:textColor="#000000"
            android:textSize="13dp"
            android:layout_below ="@id/observation_date"
            android:layout_width="wrap_content"
            android:layout_height ="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="6dp"
            android:text="@string/my_events_description"/>

        <TextView android:id="@+id/observation_description_text"
            android:textSize="13dp"
            android:layout_below ="@id/observation_description"
            android:layout_width="wrap_content"
            android:layout_height ="wrap_content"
            android:textColor="#bcbcbc"
            android:layout_marginBottom="4dp"
            android:maxLines="4"
            android:text="nesto"/>

        <TextView android:id="@+id/observation_category"
            android:textColor="#000000"
            android:textSize="13dp"
            android:layout_below ="@id/observation_description_text"
            android:layout_width="wrap_content"
            android:layout_height ="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="6dp"
            android:text="@string/my_events_category"/>

        <TextView android:id="@+id/observation_category_text"
            android:textSize="13dp"
            android:layout_below ="@id/observation_category"
            android:layout_width="wrap_content"
            android:layout_height ="wrap_content"
            android:textColor="#bcbcbc"
            android:layout_marginBottom="4dp"
            android:maxLines="4"
            android:text="nesto"/>

        <TextView android:id="@+id/observation_status"
            android:textColor="#000000"
            android:textSize="13dp"
            android:layout_width="wrap_content"
            android:layout_height ="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="70dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:text="@string/my_events_status"/>

        <TextView android:id="@+id/observation_status_text"
            android:textSize="13dp"
            android:layout_below ="@id/observation_status"
            android:layout_alignLeft="@id/observation_status"
            android:layout_width="wrap_content"
            android:layout_height ="wrap_content"
            android:textColor="#bcbcbc"
            android:layout_marginTop="2dp"
            android:maxLines="3"
            android:text="nesto"/>

    </RelativeLayout>

</LinearLayout>
