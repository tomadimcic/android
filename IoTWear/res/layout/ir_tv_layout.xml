<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="#111111" 
    android:layout_height="fill_parent">
<RelativeLayout 
     android:layout_width="fill_parent"  
   android:layout_height="wrap_content"  
   android:layout_gravity="center"  
   android:layout_margin="0dip"   
   android:orientation="vertical"  
   android:background="#111111" 
   android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"  >
   
    <TextView  
     android:id="@+id/dialogTitle"  
     android:layout_width="fill_parent"  
     android:layout_height="wrap_content"  
     android:layout_marginTop="10dip"  
     android:background="#00000000"  
     android:gravity="center"  
     android:text="Remote controller"  
     android:textColor="#fff"  
     android:textSize="22sp"  
     android:textStyle="bold" >  
   </TextView>

    <Button
        android:id="@+id/progUp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="10dip"
        android:layout_below="@+id/dialogTitle"
        android:layout_centerHorizontal="true"
        android:background="@drawable/arrow_up"
        android:textColor="#FFFFFF"
        android:text="1" />

    <Button
        android:id="@+id/volUp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/progUp"
        android:layout_toLeftOf="@+id/progDown"
        android:background="@drawable/arrow_left"
        android:textColor="#FFFFFF"
        android:text="3" />

    <Button
        android:id="@+id/volDown"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/progDown"
        android:layout_toRightOf="@+id/progUp"
        android:background="@drawable/arrow_right"
        android:textColor="#FFFFFF"
        android:text="4" />

    <Button
        android:id="@+id/progDown"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignLeft="@+id/progUp"
        android:layout_below="@+id/volUp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/arrow_down"
        android:textColor="#FFFFFF"
        android:text="2" />

    <Button
        android:id="@+id/middle_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/volUp"
        android:layout_alignLeft="@+id/progUp"
        android:layout_alignRight="@+id/progUp"
        android:layout_alignTop="@+id/volUp"
        android:background="@drawable/button"
        android:textColor="#FFFFFF"
        android:text="5" />

    <Button
        android:id="@+id/button6"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/progDown"
        android:layout_alignLeft="@+id/volUp"
        android:background="@drawable/button"
        android:textColor="#FFFFFF"
        android:text="6" />

    <Button
        android:id="@+id/button7"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/progDown"
        android:layout_alignRight="@+id/volDown"
        android:background="@drawable/button"
        android:textColor="#FFFFFF"
        android:text="7" />

    <Button
        android:id="@+id/OnBtn"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/progDown"
        android:layout_marginTop="24dp"
        android:background="@drawable/button"
        android:text="8"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/OffBtn"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/OnBtn"
        android:background="@drawable/button"
        android:text="9"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/button10"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/OffBtn"
        android:layout_alignParentLeft="true"
        android:background="@drawable/button"
        android:text="10"
        android:textColor="#FFFFFF" />

</RelativeLayout>
</ScrollView>