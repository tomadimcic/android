<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >

    <com.project.ledlamp.base.CellGridView
        android:id="@+id/cell_gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:background="#F3F3F3"
        android:horizontalSpacing="1dp"
        android:numColumns="7"
        android:verticalSpacing="1dp" />

    <LinearLayout
        android:id="@+id/load_save"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="0dp"
        android:background="#E3E3E3"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/load"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Load"
            android:textSize="24sp" />

        <View
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="#FFFFFF" />

        <TextView
            android:id="@+id/save"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Save"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/current_color_container"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_above="@id/load_save"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <View
            android:id="@+id/color1"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginRight="4dp"
            android:background="#FFFFFF" />

        <View
            android:id="@+id/color2"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginRight="4dp"
            android:background="#FFFFFF" />

        <View
            android:id="@+id/color3"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginRight="4dp"
            android:background="#FFFFFF" />

        <View
            android:id="@+id/color4"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginRight="4dp"
            android:background="#FFFFFF" />

        <View
            android:id="@+id/color5"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginRight="4dp"
            android:background="#FFFFFF" />

        <View
            android:id="@+id/color6"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginRight="4dp"
            android:background="#FFFFFF" />
        
        <View
            android:id="@+id/color7"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:background="#FFFFFF" />
    </LinearLayout>

    <Button
        android:id="@+id/btnPalette"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/current_color_container"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:text="Edit palette" />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/current_color_container"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:text="Clear" />

</RelativeLayout>