<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="fill_parent"  
   android:layout_height="wrap_content"  
   android:layout_gravity="center"  
   android:layout_margin="0dip"  
   android:background="@drawable/alert_background"  
   android:orientation="vertical"  
   android:paddingBottom="35dip"  
   android:paddingLeft="0dip"  
   android:paddingRight="0dip"  
   android:paddingTop="0dip"  >
   
    <TextView  
     android:id="@+id/dialogTitle"  
     android:layout_width="fill_parent"  
     android:layout_height="wrap_content"  
     android:layout_marginTop="20dip"  
     android:background="#00000000"  
     android:gravity="center"  
     android:text="Switch"  
     android:textColor="#fff"  
     android:textSize="22sp"  
     android:textStyle="bold" >  
   </TextView>

    <Button
        android:id="@+id/button_turn_on_group"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/OkButtonGroup"
        android:layout_alignRight="@+id/OkButtonGroup"
        android:layout_below="@+id/dialogTitle"
        android:layout_marginTop="15dp"
        android:background="@drawable/button"
        android:text="@string/on"
        android:textColor="#FFFFFF" />
    
    <Button
        android:id="@+id/OkButtonGroup"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/button_delete_group"
        android:background="@drawable/button"
        android:text="OK"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/button_turn_off_group"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/button_turn_on_group"
        android:layout_alignRight="@+id/button_turn_on_group"
        android:layout_below="@+id/button_turn_on_group"
        android:layout_marginTop="15dp"
        android:background="@drawable/button"
        android:text="@string/off"
        android:textColor="#FFFFFF" />
    
    <Button
        android:id="@+id/button_edit_group"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/button_turn_off_group"
        android:layout_alignRight="@+id/button_turn_off_group"
        android:layout_below="@+id/button_turn_off_group"
        android:layout_marginTop="15dp"
        android:background="@drawable/button"
        android:text="Edit"
        android:textColor="#FFFFFF" />
    
    <Button
        android:id="@+id/button_delete_group"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/button_edit_group"
        android:layout_alignRight="@+id/button_edit_group"
        android:layout_below="@+id/button_edit_group"
        android:layout_marginTop="15dp"
        android:background="@drawable/button"
        android:text="Delete"
        android:textColor="#FFFFFF" />

</RelativeLayout>